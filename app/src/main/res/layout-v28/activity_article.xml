<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <Button
        android:id="@+id/article_place"
        android:layout_width="379dp"
        android:layout_height="150dp"
        android:layout_marginStart="-75dp"
        android:drawableEnd="@drawable/mercury"
        android:paddingEnd="30dp"
        android:paddingStart="90dp"
        android:textAlignment="textStart"
        android:text="@string/article_name"
        android:textColor="@color/background"
        android:textSize="12pt"
        android:textFontWeight="700"
        android:background="@drawable/article_place" />

    <TextView
            android:id="@+id/article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/article_place"
            android:layout_below="@id/article_place"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="10pt"
            android:textAppearance="@style/article"
            android:text="@string/article" />

</LinearLayout>